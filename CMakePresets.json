{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ],
          "intelliSenseMode": "windows-msvc-x64"
        }
      }
    },
    {
      "name": "x64-Debug",
      "displayName": "x64 Debug",
      "description": "Debug build with Ninja",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GRAVIX_USE_VULKAN": "ON",
        "GRAVIX_BUILD_EDITOR": "ON",
        "GRAVIX_BUILD_SCRIPTING": "ON"
      }
    },
    {
      "name": "x64-Release",
      "displayName": "x64 Release",
      "description": "Release build with Ninja",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GRAVIX_USE_VULKAN": "ON",
        "GRAVIX_BUILD_EDITOR": "ON",
        "GRAVIX_BUILD_SCRIPTING": "ON"
      }
    },
    {
      "name": "x64-RelWithDebInfo",
      "displayName": "x64 RelWithDebInfo",
      "description": "Release with Debug Info build with Ninja",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "GRAVIX_USE_VULKAN": "ON",
        "GRAVIX_BUILD_EDITOR": "ON",
        "GRAVIX_BUILD_SCRIPTING": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-Debug",
      "displayName": "x64 Debug",
      "configurePreset": "x64-Debug",
      "configuration": "Debug"
    },
    {
      "name": "x64-Release",
      "displayName": "x64 Release",
      "configurePreset": "x64-Release",
      "configuration": "Release"
    },
    {
      "name": "x64-RelWithDebInfo",
      "displayName": "x64 RelWithDebInfo",
      "configurePreset": "x64-RelWithDebInfo",
      "configuration": "RelWithDebInfo"
    }
  ],
  "testPresets": [
    {
      "name": "x64-Debug",
      "displayName": "x64 Debug",
      "configurePreset": "x64-Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "x64-Release",
      "displayName": "x64 Release",
      "configurePreset": "x64-Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "x64-RelWithDebInfo",
      "displayName": "x64 RelWithDebInfo",
      "configurePreset": "x64-RelWithDebInfo",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
